        <!-- FATAL级别
        <RollingRandomAccessFile name="FatalFile" fileName="logs/fatal/${ProjectName}-fatal.log"
                                 filePattern="logs/fatal/$${date:yyyy-MM}/${ProjectName}-fatal-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
